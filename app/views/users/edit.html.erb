<h2>Edit Your Profile</h2>

<%= form_for @user do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :name %>
    <br></br>
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
    <br></br>
    <%= f.label :Address %>
    <%= f.text_area :address, size: "30x8"  %>
    <br></br>
    <%= f.label "New Password" %>
    <%= f.password_field :password %>
    <br></br>
    <%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
    <br></br>
    <%= f.submit %>
<% end %>
