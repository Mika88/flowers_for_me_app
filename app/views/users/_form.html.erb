<div class="form">
    <%= form_for @user do |f| %>
        <%= render partial: "errors", locals: {object: @user} %>
        <br></br>
        <%= f.label :Name %>
        <%= f.text_field :name %>
        <br></br>
        <%= f.label :Email %>
        <%= f.text_field :email %>
        <br></br>
        <%= f.label :Address %><br>
        <%= f.text_area :address, size: "30x8"  %>
        <br></br>
        <%= f.label 'Check box if you are an admin' %><br>
        <%= f.check_box :admin %><br> 
        <br></br>
        <%= f.label "Create a Password" %>
        <%= f.password_field :password %>
        <br></br>
        <%= f.label "Confirm Password" %>
        <%= f.password_field :password_confirmation %>
        <br></br>
        <%= f.submit %>
    <% end %>
</div>