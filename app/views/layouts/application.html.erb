<!DOCTYPE html>
<html>
  <head>
    <title>FlowersForMeApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-light bg-light">
  <div style="padding-left: 10px;">
    <%= image_tag("logo.jpg", width: "70px")%>
    <span class="navbar-brand">Flowers for Me</span>
  </div>
  <form class="form-inline">
    <%= link_to "Home", root_path, class: "btn btn-outline-primary", role: "button" %>
    <div style="padding-left: 10px;">
      <%= link_to "Login", '/login', class: "btn btn-outline-success", role: "button" %> 
      <%= link_to "Sign Up", new_user_path, class: "btn btn-outline-success", role: "button" %>
    </div>
  </form>
</nav>
  <body>
    <div style="padding-left: 10px;">
      <%= yield %>
    </div>
  </body>
</html>
