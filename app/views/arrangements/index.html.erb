<strong class=text-danger><%= flash[:error] %></strong>

<h2>Choose Your Favorite Arrangement</h2>

<div>
  <strong>Filter arrangements by:</strong>
  <%= form_tag(arrangements_path, method: "get") do %>
    <%= select_tag "height", options_for_select(["Tall", "Medium (average)", "Short"]), prompt: "Height" %>
    <%= select_tag "price", options_for_select(["Ascending order", "Descending order"]), prompt: "Price"  %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>

<ul>
<% @arrangements.each do |f| %>
  <li><%= link_to f.title, arrangement_path(f) %> - $<%= f.price %></li><br>
  <p><%= image_tag f.image_url.to_s, size: "100x100" if f.image? %></p>
<% end %>
</ul>

<%if current_user.admin %>
  <%= button_to "Add a new arrangement", new_arrangement_path, method: :get %>
<% end %>