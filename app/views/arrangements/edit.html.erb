<h2>Edit Your Arrangement</h2>

<%= form_for @arrangement do |f| %>
    <%= f.label :Title %>
    <%= f.text_field :title %>
    <br></br>
    <%= f.label :Description %><br>
    <%= f.text_area :description, size: "30x8" %>
    <br></br>
    <%= f.label :Height %>
    <%= f.select :height, [['Tall'], ['Medium (average)'], ['Short']], include_blank: true %>
    <br></br>
    <%= f.label "Price in $" %>
    <%= f.text_field :price %>
    <br></br>
    <%= f.submit %>
<% end %>
