<div class="form">
    <%= form_for @arrangement, :html => {:multipart => true} do |f| %>
        <%= render partial: "errors", locals: {object: @arrangement} %>
        <%= f.label :Title %>
        <%= f.text_field :title %>
        <br></br>
        <%= f.label :Description %><br>
        <%= f.text_area :description, size: "30x8" %>
        <br></br>
        <%= f.label :Height %>
        <%= f.select :height, [['Tall'], ['Medium (average)'], ['Short']], include_blank: true %>
        <br></br>
        <%= f.label "Price in $" %>
        <%= f.text_field :price %>
        <br></br>
        <%= f.label "Upload image" %><br>
        <%= f.file_field :image %>
        <br></br>
        <%= f.submit %>
    <% end %>
</div>
